# Curated Presentation Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# AUTHENTICATION (NextAuth.js)
# ===========================================
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# SUPABASE (Optional - falls back to JSON files if not set)
# ===========================================
# Get these from your Supabase project settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key for migrations and server-side operations
# WARNING: Never expose this in client-side code
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# OPTIONAL SETTINGS
# ===========================================
# Enable debug logging
# DEBUG=true

# Set the base URL for the app (used for share links, etc.)
# APP_URL=https://your-domain.com
